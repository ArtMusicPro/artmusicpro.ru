<main class="main">
    <div class="container">
        <%- partial('common/main-title') %>
        <% if(page.banner) { %>
            <div class="main__image main__image_width-100">
                <img class="main-image" src="<%= page.banner %>" alt="<%= page.title %>">
            </div>
        <% } %>
        <div class="main__content">
            <div class="content">
                <%- markdown(page.content) %>
            </div>
        </div>
        <% if(page.youtube != "") { %>
            <div class="main__video">
                <iframe src="https://www.youtube.com/embed/<%= page.youtube %>" frameborder="0" allowfullscreen></iframe>
            </div>
        <% } %>
    </div>
